{
  "expo": {
    "name": "TrainLCD",
    "slug": "trainlcd",
    "privacy": "public",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "version": "0.5.0",
    "orientation": "landscape",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#03A9F4"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "me.tinykitten.trainlcd",
      "buildNumber": "23",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "最寄り駅を取得するためにアプリ使用中は継続的に位置情報を使用します。",
        "CFBundleDevelopmentRegion": "ja_JP",
        "UIDeviceFamily": 1
      }
    },
    "android": {
      "package": "me.tinykitten.trainlcd",
      "adaptiveIcon": {
        "backgroundColor": "#03A9F4",
        "foregroundImage": "./assets/icon-adaptive-fg.png"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ],
      "versionCode": 25
    }
  }
}
